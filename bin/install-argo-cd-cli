#!/bin/bash

curl -L -o $SOFTWARE_FOLDER/argocd-linux-amd64 https://github.com/argoproj/argo-cd/releases/latest/download/argocd-linux-amd64
install -m 555 $SOFTWARE_FOLDER/argocd-linux-amd64 $HOME/bin/argocd
# sudo install -m 555 $SOFTWARE_FOLDER/argocd-linux-amd64 /usr/local/bin/argocd
rm $SOFTWARE_FOLDER/argocd-linux-amd64
