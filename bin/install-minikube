#!/bin/bash

curl -L -o $SOFTWARE_FOLDER/minikube-linux-amd64 https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
install $SOFTWARE_FOLDER/minikube-linux-amd64 $HOME/bin/minikube
# sudo install -m 555 $SOFTWARE_FOLDER/minikube-linux-amd64 /usr/local/bin/minikube
rm $SOFTWARE_FOLDER/minikube-linux-amd64

echo "Getting started with minikube got to"
echo "    https://minikube.sigs.k8s.io/docs/start/"
echo "    https://minikube.sigs.k8s.io/docs/drivers/podman/"
echo ""
echo "minikube config set driver podman"
echo "minikube start"